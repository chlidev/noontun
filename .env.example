# Noontun Analytics - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ================================
# DATABASE
# ================================
DATABASE_URL="postgresql://username:password@localhost:5432/noontun_analytics"

# ================================
# AUTHENTICATION
# ================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-change-in-production"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ================================
# FILE STORAGE
# ================================
# AWS S3 Configuration (recommended for production)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="ap-southeast-1"  # Singapore region for Indonesia
AWS_S3_BUCKET="noontun-analytics-files"

# Local storage (for development)
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=52428800  # 50MB in bytes

# ================================
# AI SERVICES
# ================================
OPENAI_API_KEY="your-openai-api-key"
OPENAI_ORGANIZATION="your-openai-org-id"

# ================================
# PAYMENT GATEWAYS
# ================================
# Stripe (International)
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Midtrans (Indonesian)
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_ENVIRONMENT="sandbox"  # "sandbox" or "production"

# ================================
# EMAIL SERVICES
# ================================
# Resend (recommended)
RESEND_API_KEY="your-resend-api-key"
FROM_EMAIL="noreply@noontun.com"

# Nodemailer (alternative)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ================================
# ANALYTICS & MONITORING
# ================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry (Error tracking)
SENTRY_DSN="your-sentry-dsn"

# ================================
# APPLICATION SETTINGS
# ================================
# Environment
NODE_ENV="development"  # "development", "staging", "production"

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes in seconds

# Indonesian Localization
DEFAULT_LOCALE="id"
DEFAULT_TIMEZONE="Asia/Jakarta"
DEFAULT_CURRENCY="IDR"

# ================================
# DEVELOPMENT TOOLS
# ================================
# Database tools
DATABASE_PRISMA_STUDIO_PORT=5555

# Development flags
ENABLE_DEBUG_LOGS=true
ENABLE_QUERY_LOGGING=true

# ================================
# PRODUCTION SETTINGS
# ================================
# Security
ALLOWED_ORIGINS="http://localhost:3000,https://noontun.com"
CORS_CREDENTIALS=true

# Performance
REDIS_URL="redis://localhost:6379"  # For caching and sessions
ENABLE_CACHE=true
CACHE_TTL=3600  # 1 hour

# CDN
CDN_URL="https://cdn.noontun.com"

# ================================
# INDONESIAN BUSINESS SETTINGS
# ================================
# Business registration
BUSINESS_NAME="PT Noontun Analytics Indonesia"
BUSINESS_ADDRESS="Jakarta, Indonesia"
TAX_ID="01.234.567.8-901.000"

# Indonesian banking
BANK_NAME="Bank Central Asia"
BANK_ACCOUNT="1234567890"

# Customer support
SUPPORT_EMAIL="support@noontun.com"
SUPPORT_PHONE="+62-21-1234-5678"
WHATSAPP_NUMBER="+62-812-3456-7890"

# ================================
# FEATURE FLAGS
# ================================
ENABLE_AI_FEATURES=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_WHITE_LABEL=false
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=true

# ================================
# COMPLIANCE
# ================================
# Indonesian Data Protection
DATA_RETENTION_DAYS=2555  # 7 years as per Indonesian law
ENABLE_DATA_EXPORT=true
ENABLE_DATA_DELETION=true

# Audit logging
ENABLE_AUDIT_LOGS=true
AUDIT_LOG_RETENTION_DAYS=365